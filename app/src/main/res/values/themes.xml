<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MobileFleet" parent="android:Theme.Material.Light.NoActionBar" />

    <!-- Splash Screen Theme -->
    <style name="Theme.MobileFleet.SplashScreen" parent="Theme.MobileFleet">
        <!-- Set the splash screen background -->
        <item name="android:windowBackground">@color/splash_background</item>

        <!-- Remove action bar for splash -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <!-- Full screen splash -->
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>